<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.SellerServicesDetailsActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextAppearance="@style/ActionBarTextAppearance">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linerLayoutBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


<!--            <ImageView-->
<!--                android:id="@+id/imgCart"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:layout_marginRight="10dp"-->
<!--                app:srcCompat="@drawable/ic_baseline_shopping_cart_24"-->
<!--                tools:ignore="VectorDrawableCompat" />-->

        </RelativeLayout>



    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sellerDetailsPageImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/service"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/sellerDetailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coorag Manpower Services"
                android:textColor="@color/black"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/black"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/sellerDetailsPageprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="\u20B9 150"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/black"
                android:paddingRight="10dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/sellerDetailsPageLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coorag Labour Service"
                android:textColor="@color/black_opacity_66"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Description"
                android:textColor="@color/black"
                android:paddingRight="10dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/sellerDetailsPageDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid labour service available"
                android:textColor="@color/black_opacity_66"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="18sp"/>


            <Button
                android:id="@+id/btnPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttonfoodlist"
                android:text="Pay now"
                android:textColor="@color/white" />



        </LinearLayout>

    </ScrollView>

</LinearLayout>