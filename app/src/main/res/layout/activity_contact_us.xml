<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.webdigital.subbisky.activity.ContactUsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:titleTextAppearance="@style/ActionBarTextAppearance"
                    app:titleTextColor="@color/colorWhite">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linerLayoutBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/imgBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24"
                                tools:ignore="VectorDrawableCompat" />

                            <TextView
                                android:id="@+id/textHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Back"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Us"
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            app:srcCompat="@drawable/ic_baseline_shopping_cart_24"
                            tools:ignore="VectorDrawableCompat" />

                    </RelativeLayout>




                </androidx.appcompat.widget.Toolbar>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="10dp"
                        android:text="Contact Details"
                       android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/md_blue_900" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="@string/contactUs_subTitle1"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <TextView
                        android:id="@+id/editLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Subbisky mahadevpet, Madikeri,karnateka 571201"
                        android:textColorHint="@color/grey_2"
                        android:background="@drawable/edittext_design"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:paddingLeft="8dp"
                        android:textSize="14dp"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="2"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/editEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="info@subbisky.in"
                                android:background="@drawable/edittext_design"
                                android:drawableLeft="@drawable/ic_baseline_email_24"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="10dp"
                                android:paddingLeft="2dp"
                                android:paddingRight="4dp"
                                android:textSize="14dp"
                                android:textColor="@color/black" />
                            <TextView
                                android:id="@+id/editphone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="5dp"
                                android:text="082722 22224"
                                android:background="@drawable/edittext_design"
                                android:drawableLeft="@drawable/ic_baseline_phone_24"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="10dp"
                                android:paddingLeft="2dp"
                                android:textSize="14dp"
                                android:textColor="@color/black" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/fb"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center_horizontal"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/twitter"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center_horizontal"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/instagram"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center_horizontal"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/pinrest"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center_horizontal"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/youtube"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grey_2"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="10dp"
                        android:text="Contact Us"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/md_blue_900" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">


                    <EditText
                        android:id="@+id/editname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:textColorHint="@color/grey_2"
                        android:background="@drawable/edittext_design"
                        android:layout_marginBottom="10dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:paddingLeft="8dp"
                        android:textSize="14dp"
                        android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/editemail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/grey_2"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/edittext_design"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="10dp"
                            android:paddingLeft="8dp"
                            android:textSize="14dp"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/editphn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phone"
                            android:inputType="phone"
                            android:textColorHint="@color/grey_2"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/edittext_design"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="10dp"
                            android:paddingLeft="8dp"
                            android:textSize="14dp"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/editsub"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Subject"
                            android:textColorHint="@color/grey_2"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/edittext_design"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="10dp"
                            android:paddingLeft="8dp"
                            android:textSize="14dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Message"
                            android:textSize="14sp"
                            android:textColor="@color/black" />


                        <EditText
                            android:id="@+id/editmsg"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:textColorHint="@color/grey_2"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/edittext_design"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="10dp"
                            android:paddingLeft="8dp"
                            android:textSize="14dp"
                            android:textColor="@color/black" />


                        <Button
                            android:id="@+id/Submit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/buttondesign"
                            android:text="Submit"
                            android:textColor="@color/white" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.appbar.AppBarLayout>



</LinearLayout>