<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/imageView"
                android:text="Mutton Biryani"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/md_blue_900" />

            <TextView
                android:id="@+id/textViewRup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/textViewTitle"
                android:text="\u20B9 150"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewRup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="77dp"
                android:layout_toRightOf="@id/textViewRup"
                android:layout_below="@id/textViewTitle"
                android:text="\u20B9 220"
                android:textColor="@color/black_opacity_25"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewRup"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonfoodlist"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Add to cart"
                android:textColor="@color/white" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>