<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sellerproductimage"
            android:layout_width="100dp"
            android:layout_height = "90dp"
            android:padding="5dp"
            android:background="@drawable/cell_shape"
            android:src="@drawable/subbiskylogo"
            />
        <TextView
            android:id="@+id/sellerproductname"
            android:layout_width = "120dp"
            android:layout_height = "90dp"
            android:layout_weight = "3"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = " "
            android:textSize="14sp"
            android:background="@drawable/cell_shape"
            android:textColor = "#000"/>
        <TextView
            android:id="@+id/sellerproductmrpprice"
            android:layout_width = "120dp"
            android:layout_height = "90dp"
            android:layout_weight = "3"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = " "
            android:textSize="14sp"
            android:background="@drawable/cell_shape"
            android:textColor = "#000"/>
        <TextView
            android:id="@+id/sellerproductsellingprice"
            android:layout_width = "120dp"
            android:layout_height = "90dp"
            android:layout_weight = "3"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = " "
            android:textSize="14sp"
            android:background="@drawable/cell_shape"
            android:textColor = "#000"/>
        <TextView
            android:id="@+id/sellerproductcategory"
            android:layout_width = "120dp"
            android:layout_height = "90dp"
            android:layout_weight = "3"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = " "
            android:textSize="14sp"
            android:background="@drawable/cell_shape"
            android:textColor = "#000"/>
        <TextView
            android:id="@+id/sellerproductstatus"
            android:layout_width = "120dp"
            android:layout_height = "90dp"
            android:layout_weight = "3"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = " "
            android:textSize="14sp"
            android:background="@drawable/cell_shape"
            android:textColor = "#000"/>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height = "90dp"
            android:gravity = "center"
            android:background="@drawable/cell_shape"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/editproductlist"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:src="@drawable/edit"
                android:gravity = "center"
                android:layout_marginRight="5dp"
                android:padding = "5dp"
                android:text = "status"
                android:textSize="14sp"
                android:textColor = "#000"/>
            <ImageView
                android:id="@+id/deleteproductlist"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:src="@drawable/delete"
                android:gravity = "center"
                android:layout_marginLeft="5dp"
                android:padding = "5dp"
                android:text = "status"
                android:textSize="14sp"
                android:textColor = "#000"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>