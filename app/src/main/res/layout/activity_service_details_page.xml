            <TextView
                android:id="@+id/serviceAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Madikeri, Kodagu"
                android:textColor="@color/black_opacity_66"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/hidecontactDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:background="@drawable/border_service_desciption"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/serviceNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_baseline_phone_24"
                        android:text="+91 9874563210"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/serviceEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_baseline_email_24"
                        android:text="support@star.com"
                        android:textColor="@color/black" />
                </LinearLayout>

                <TextView
                    android:id="@+id/serviceContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_account_box_24"
                    android:text="Anand Haridas"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/serviceReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  write Review"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:background="@drawable/border_service_desciption"
                    android:drawableLeft="@drawable/ic_outline_star_border_24"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/serviceQuote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u20B9   Get Quote"
                    android:layout_weight="1"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="12dp"
                    android:textSize="16sp"
                    android:background="@drawable/button_quota"
                    android:textColor="@color/white" />
            </LinearLayout>
