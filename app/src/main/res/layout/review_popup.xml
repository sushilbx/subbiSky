<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_blue_900"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Review "
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:text="Ratings**" />
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
<!--        <Spinner-->
<!--            android:id="@+id/reviewSpinner"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_marginLeft="5dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginBottom="4dp"-->
<!--            android:entries="@array/Reviews"-->
<!--            android:background="@drawable/textboxdesign"-->
<!--            android:padding="10dp"-->
<!--            android:textColor="@color/grey_dark"-->
<!--            android:textColorHint="@color/grey_dark_2_opacity_25" />-->


        <TextView
            android:id="@+id/txtmsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:text="Review" />

        <EditText
            android:id="@+id/enterReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/grey_dark"
            android:background="@drawable/textboxdesign"
            android:textColorHint="@color/grey_dark_2_opacity_25" />


        <Button
            android:id="@+id/btnsubmitNow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonfoodlist"
            android:text="Submit"
            android:layout_marginBottom="12dp"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>